{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "src",
        "outDir": "",
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "removeComments": false,
        "typeRoots": ["node_modules/@types"],
        "types": ["node"],
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "*.d.ts"
    ]
}
